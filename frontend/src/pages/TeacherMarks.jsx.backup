import { useState, useEffect } from 'react'
import { motion } from 'motion/react'
import { useNavigate } from 'react-router-dom'
import ThemeToggle from '../components/ThemeToggle'
import CustomAlert from '../components/CustomAlert'
import CustomSelect from '../components/CustomSelect'
import api from '../services/api'

export default function TeacherMarks() {
  const navigate = useNavigate()
  const user = api.getCurrentUser()
  
  const [mode, setMode] = useState('choose') // choose, add, view
  const [step, setStep] = useState('select') // select, entry
  const [examType, setExamType] = useState('')
  const [semester, setSemester] = useState('')
  const [subject, setSubject] = useState('')
  const [maxMarks, setMaxMarks] = useState(40)
  const [subjects, setSubjects] = useState([])
  const [students, setStudents] = useState([])
  const [marks, setMarks] = useState({})
  const [loading, setLoading] = useState(false)
  const [alert, setAlert] = useState({ show: false, message: '', type: 'success' })

  useEffect(() => {
    if (!user || (user.role !== 'staff' && user.role !== 'teacher')) {
      navigate('/login')
      return
    }
  }, [])

  const examTypes = [
    { value: 'class_test', label: 'Class Test' },
    { value: 'internal_1', label: 'First Internal Exam' },
    { value: 'internal_2', label: 'Second Internal Exam' }
  ]

  const semesterOptions = [1,2,3,4,5,6].map(s => ({ value: s.toString(), label: `Semester ${s}` }))

  const fetchSubjects = async (sem) => {
    try {
      const res = await api.authenticatedGet(`/teacher/get_assigned_subjects.php?semester=${sem}`)
      if (res.success) {
        setSubjects(res.data.subjects || [])
      }
    } catch (e) { console.error(e) }
  }

  const handleNext = async (e) => {
    if (e) e.preventDefault()
    if (!examType || !semester || !subject) {
      setAlert({ show: true, message: 'Please select all fields', type: 'error' })
      return
    }
    setLoading(true)
    try {
      const res = await api.authenticatedGet(`/marks/get_students_for_marks.php?semester=${semester}&subject_id=${subject}&exam_type=${examType}`)
      if (res.success) {
        setStudents(res.data.students || [])
        const initialMarks = {}
        res.data.students.forEach(s => {
          if (examType === 'semester_exam') {
            initialMarks[s.id] = { esa: s.esa_marks || '', isa: s.isa_marks || '' }
          } else {
            initialMarks[s.id] = s.marks_obtained || ''
          }
        })
        setMarks(initialMarks)
        setStep('entry')
      } else {
        setAlert({ show: true, message: res.message || 'Failed to load students', type: 'error' })
      }
    } catch (e) {
      console.error('Error:', e)
      setAlert({ show: true, message: 'Failed to load students', type: 'error' })
    }
    setLoading(false)
  }


  const handleSubmit = async () => {
    setLoading(true)
    try {
      const res = await api.authenticatedPost('/marks/enter_exam_marks.php', {
        subject_id: subject,
        semester: semester,
        exam_type: examType,
        max_marks: maxMarks,
        marks: marks
      })
      if (res.success) {
        setAlert({ show: true, message: res.message, type: 'success' })
        setTimeout(() => {
          setMode('choose')
          setStep('select')
          setExamType('')
          setSemester('')
          setSubject('')
          setMarks({})
        }, 2000)
      } else {
        setAlert({ show: true, message: res.message, type: 'error' })
      }
    } catch (e) {
      setAlert({ show: true, message: 'Failed to save marks', type: 'error' })
    }
    setLoading(false)
  }

  const calculateGrade = (total) => {
    if (total >= 90) return { grade: 'A+', gp: 9 }
    if (total >= 80) return { grade: 'A', gp: 8 }
    if (total >= 70) return { grade: 'B+', gp: 7 }
    if (total >= 60) return { grade: 'B', gp: 6 }
    if (total >= 50) return { grade: 'C', gp: 5 }
    if (total >= 40) return { grade: 'D', gp: 4 }
    return { grade: 'F', gp: 0 }
  }

  return (
    <motion.div
      initial={{ opacity: 0, y: 20 }}
      animate={{ opacity: 1, y: 0 }}
      exit={{ opacity: 0, y: -20 }}
      transition={{ duration: 0.15 }}
      className="min-h-screen pb-24 px-4 py-6 max-w-7xl mx-auto"
    >
      <header className="flex justify-between items-center mb-6">
        <div className="flex items-center gap-4">
          <button onClick={() => {
            if (step === 'entry') setStep('select')
            else if (mode !== 'choose') setMode('choose')
            else navigate('/teacher/dashboard')
          }}
            className="w-10 h-10 rounded-full bg-white/30 dark:bg-gray-800/30 backdrop-blur-xl border border-white/20 flex items-center justify-center hover:bg-white/50 dark:hover:bg-gray-800/50 transition-all">
            <i className="fas fa-arrow-left text-slate-800 dark:text-white"></i>
          </button>
          <h1 className="text-3xl font-bold text-slate-800 dark:text-white">Marks Management</h1>
        </div>
        <div className="flex items-center gap-4">
          <ThemeToggle />
          <span className="text-slate-700 dark:text-slate-300 font-medium">{user?.full_name}</span>
        </div>
      </header>

      <div className="bg-gradient-to-r from-green-500 to-emerald-600 rounded-2xl p-6 mb-8 text-white shadow-2xl">
        <div className="flex items-center gap-4">
          <div className="w-16 h-16 rounded-full bg-white/20 flex items-center justify-center">
            <i className="fas fa-clipboard-list text-3xl"></i>
          </div>
          <div>
            <h2 className="text-2xl font-bold">
              {mode === 'choose' ? 'Marks Management' : mode === 'add' ? (step === 'select' ? 'Add Marks - Select Details' : 'Add Marks - Enter Marks') : 'View Marks'}
            </h2>
            <p className="text-green-100">
              {mode === 'choose' ? 'Add or view student marks' : mode === 'add' && step === 'entry' ? `${examTypes.find(e => e.value === examType)?.label} - Semester ${semester}` : 'View all marks you have entered'}
            </p>
          </div>
        </div>
      </div>

      {loading ? (
        <div className="flex items-center justify-center py-20">
          <i className="fas fa-spinner fa-spin text-6xl text-green-500"></i>
        </div>
      ) : mode === 'choose' ? (
        <div className="grid grid-cols-1 md:grid-cols-2 gap-6">
          <motion.div whileHover={{ scale: 1.02 }} onClick={() => { setMode('add'); setStep('select') }}
            className="bg-white/30 dark:bg-gray-800/30 backdrop-blur-xl rounded-2xl p-8 border border-white/20 shadow-lg cursor-pointer hover:bg-green-500/10 transition-all">
            <div className="w-16 h-16 rounded-full bg-green-500/20 flex items-center justify-center mb-4">
              <i className="fas fa-pen text-3xl text-green-500"></i>
            </div>
            <h3 className="text-2xl font-bold text-slate-800 dark:text-white mb-2">Add Marks</h3>
            <p className="text-slate-600 dark:text-slate-400">Enter marks for class tests, internals, and semester exams</p>
          </motion.div>
          
          <motion.div whileHover={{ scale: 1.02 }} onClick={() => setMode('view')}
            className="bg-white/30 dark:bg-gray-800/30 backdrop-blur-xl rounded-2xl p-8 border border-white/20 shadow-lg cursor-pointer hover:bg-purple-500/10 transition-all">
            <div className="w-16 h-16 rounded-full bg-purple-500/20 flex items-center justify-center mb-4">
              <i className="fas fa-chart-bar text-3xl text-purple-500"></i>
            </div>
            <h3 className="text-2xl font-bold text-slate-800 dark:text-white mb-2">View Marks</h3>
            <p className="text-slate-600 dark:text-slate-400">View and analyze student performance</p>
          </motion.div>
        </div>
      ) : mode === 'view' ? (
        <ViewMarksSection 
          subjects={subjects} 
          setAlert={setAlert} 
          setMode={setMode}
        />
      ) : step === 'select' ? (
        <div className="bg-white/30 dark:bg-gray-800/30 backdrop-blur-xl rounded-2xl p-8 border border-white/20 shadow-lg">
          <div className="grid grid-cols-1 md:grid-cols-2 gap-6">
            <div>
              <label className="block text-sm font-semibold text-slate-700 dark:text-slate-300 mb-2">Exam Type *</label>
              <CustomSelect name="examType" value={examType} onChange={(e) => setExamType(e.target.value)}
                options={examTypes} placeholder="Select Exam Type" />
            </div>
            <div>
              <label className="block text-sm font-semibold text-slate-700 dark:text-slate-300 mb-2">Semester *</label>
              <CustomSelect name="semester" value={semester} onChange={(e) => { setSemester(e.target.value); fetchSubjects(e.target.value) }}
                options={semesterOptions} placeholder="Select Semester" />
            </div>
            <div className="md:col-span-2">
              <label className="block text-sm font-semibold text-slate-700 dark:text-slate-300 mb-2">Subject *</label>
              <CustomSelect name="subject" value={subject} onChange={(e) => setSubject(e.target.value)}
                options={subjects.map(s => ({ value: s.id.toString(), label: `${s.subject_name} (${s.subject_code})` }))}
                placeholder="Select Subject" disabled={!semester} />
            </div>
            <div>
              <label className="block text-sm font-semibold text-slate-700 dark:text-slate-300 mb-2">Maximum Marks</label>
              <input type="number" value={maxMarks} onChange={(e) => setMaxMarks(e.target.value)}
                className="w-full px-4 py-3 rounded-xl bg-white/50 dark:bg-gray-700/50 border border-slate-300 dark:border-slate-600 text-slate-800 dark:text-white" />
            </div>
          </div>
          <button type="button" onClick={handleNext} disabled={!examType || !semester || !subject}
            className="w-full mt-8 py-4 bg-gradient-to-r from-green-500 to-emerald-600 text-white rounded-xl font-bold text-lg hover:from-green-600 hover:to-emerald-700 transition-all disabled:opacity-50">
            Next <i className="fas fa-arrow-right ml-2"></i>
          </button>
        </div>
      ) : (
        <div className="bg-white/30 dark:bg-gray-800/30 backdrop-blur-xl rounded-2xl p-8 border border-white/20 shadow-lg">
          <div className="flex items-center justify-between mb-6">
            <div>
              <h3 className="text-xl font-bold text-slate-800 dark:text-white">
                {subjects.find(s => s.id.toString() === subject)?.subject_name}
              </h3>
              <p className="text-sm text-slate-600 dark:text-slate-400">{students.length} Students • Max: {maxMarks} marks</p>
            </div>
            <div className="px-4 py-2 rounded-lg bg-green-500/20 border border-green-500/30">
              <span className="text-green-700 dark:text-green-300 font-bold">{examTypes.find(e => e.value === examType)?.label}</span>
            </div>
          </div>
          
          <div className="overflow-x-auto">
            <table className="w-full">
              <thead>
                <tr className="border-b-2 border-slate-300 dark:border-slate-600">
                  <th className="text-left py-3 px-4 text-slate-700 dark:text-slate-300 font-semibold">Roll No</th>
                  <th className="text-left py-3 px-4 text-slate-700 dark:text-slate-300 font-semibold">Student Name</th>
                  <th className="text-center py-3 px-4 text-slate-700 dark:text-slate-300 font-semibold">Marks</th>
                  <th className="text-center py-3 px-4 text-slate-700 dark:text-slate-300 font-semibold">Status</th>
                </tr>
              </thead>
              <tbody>
                {students.map((student, index) => {
                  const studentMarks = parseFloat(marks[student.id]) || 0
                  const percentage = maxMarks > 0 ? (studentMarks / maxMarks) * 100 : 0
                  const isPassing = percentage >= 40
                  
                  return (
                    <tr key={student.id} className="border-b border-slate-200 dark:border-slate-700 hover:bg-white/30 dark:hover:bg-gray-700/30 transition-colors">
                      <td className="py-3 px-4">
                        <span className="font-mono text-slate-700 dark:text-slate-300">{student.student_id}</span>
                      </td>
                      <td className="py-3 px-4">
                        <span className="font-medium text-slate-800 dark:text-white">{student.first_name} {student.last_name}</span>
                      </td>
                      <td className="py-3 px-4">
                        <div className="flex items-center justify-center gap-2">
                          <input 
                            type="number" 
                            min="0" 
                            max={maxMarks} 
                            step="0.5" 
                            value={marks[student.id] || ''}
                            onChange={(e) => {
                              const val = parseFloat(e.target.value)
                              if (val < 0 || val > maxMarks) return
                              setMarks({...marks, [student.id]: e.target.value})
                            }}
                            onBlur={(e) => {
                              const val = parseFloat(e.target.value)
                              if (isNaN(val) || val < 0) setMarks({...marks, [student.id]: '0'})
                              else if (val > maxMarks) setMarks({...marks, [student.id]: maxMarks.toString()})
                            }}
                            placeholder="0"
                            className="w-20 px-3 py-2 rounded-lg bg-white dark:bg-gray-600 border-2 border-slate-300 dark:border-slate-500 text-slate-800 dark:text-white text-center font-bold text-lg focus:border-green-500 focus:ring-2 focus:ring-green-500/20 transition-all" 
                          />
                          <span className="text-slate-500 dark:text-slate-400 font-medium">/ {maxMarks}</span>
                        </div>
                      </td>
                      <td className="py-3 px-4 text-center">
                        {marks[student.id] ? (
                          <span className={`inline-flex items-center gap-1 px-3 py-1 rounded-full text-xs font-bold ${
                            isPassing 
                              ? 'bg-green-500/20 text-green-700 dark:text-green-300 border border-green-500/30' 
                              : 'bg-red-500/20 text-red-700 dark:text-red-300 border border-red-500/30'
                          }`}>
                            <i className={`fas ${isPassing ? 'fa-check-circle' : 'fa-times-circle'}`}></i>
                            {percentage.toFixed(0)}%
                          </span>
                        ) : (
                          <span className="text-slate-400 dark:text-slate-500 text-xs">Not entered</span>
                        )}
                      </td>
                    </tr>
                  )
                })}
              </tbody>
            </table>
          </div>

          <div className="mt-6 flex items-center justify-between p-4 rounded-xl bg-slate-100 dark:bg-gray-700/50">
            <div className="flex gap-6">
              <div>
                <p className="text-xs text-slate-600 dark:text-slate-400">Total Students</p>
                <p className="text-2xl font-bold text-slate-800 dark:text-white">{students.length}</p>
              </div>
              <div>
                <p className="text-xs text-slate-600 dark:text-slate-400">Marks Entered</p>
                <p className="text-2xl font-bold text-green-600 dark:text-green-400">
                  {Object.values(marks).filter(m => m !== '' && m !== null).length}
                </p>
              </div>
              <div>
                <p className="text-xs text-slate-600 dark:text-slate-400">Pending</p>
                <p className="text-2xl font-bold text-orange-600 dark:text-orange-400">
                  {students.length - Object.values(marks).filter(m => m !== '' && m !== null).length}
                </p>
              </div>
            </div>
            <button onClick={handleSubmit} disabled={loading}
              className="px-8 py-3 bg-gradient-to-r from-green-500 to-emerald-600 text-white rounded-xl font-bold text-lg hover:from-green-600 hover:to-emerald-700 transition-all disabled:opacity-50 shadow-lg">
              {loading ? <><i className="fas fa-spinner fa-spin mr-2"></i>Saving...</> : <><i className="fas fa-save mr-2"></i>Save All Marks</>}
            </button>
          </div>
        </div>
      )}

      <CustomAlert show={alert.show} message={alert.message} type={alert.type} onClose={() => setAlert({...alert, show: false})} />
    </motion.div>
  )
}

function ViewMarksSection({ subjects, setAlert, setMode }) {
  const [filterSemester, setFilterSemester] = useState('')
  const [filterSubject, setFilterSubject] = useState('')
  const [filterExamType, setFilterExamType] = useState('')
  const [marksData, setMarksData] = useState([])
  const [loading, setLoading] = useState(true)

  const examTypes = [
    { value: '', label: 'All Exams' },
    { value: 'class_test', label: 'Class Test' },
    { value: 'internal_1', label: 'First Internal Exam' },
    { value: 'internal_2', label: 'Second Internal Exam' }
  ]

  const semesterOptions = [
    { value: '', label: 'All Semesters' },
    ...Array.from({length: 6}, (_, i) => ({ value: (i+1).toString(), label: `Semester ${i+1}` }))
  ]

  useEffect(() => {
    fetchMarks()
  }, [filterSemester, filterSubject, filterExamType])

  const fetchMarks = async () => {
    setLoading(true)
    try {
      const params = new URLSearchParams()
      if (filterSemester) params.append('semester', filterSemester)
      if (filterSubject) params.append('subject_id', filterSubject)
      if (filterExamType) params.append('exam_type', filterExamType)
      
      const res = await api.authenticatedGet(`/marks/get_teacher_marks.php?${params}`)
      if (res.success) {
        setMarksData(res.data.exam_marks || [])
      }
    } catch (e) {
      console.error(e)
      setAlert({ show: true, message: 'Failed to load marks', type: 'error' })
    }
    setLoading(false)
  }

  const getExamTypeLabel = (type) => {
    const found = examTypes.find(e => e.value === type)
    return found ? found.label : type
  }

  return (
    <motion.div
      initial={{ opacity: 0, y: 20 }}
      animate={{ opacity: 1, y: 0 }}
      exit={{ opacity: 0, y: -20 }}
      transition={{ duration: 0.15 }}
      className="min-h-screen pb-24 px-4 py-6 max-w-7xl mx-auto"
    >
      <header className="flex justify-between items-center mb-6">
        <div className="flex items-center gap-4">
          <button onClick={() => {
            if (step === 'entry') setStep('select')
            else if (mode !== 'choose') setMode('choose')
            else navigate('/teacher/dashboard')
          }}
            className="w-10 h-10 rounded-full bg-white/30 dark:bg-gray-800/30 backdrop-blur-xl border border-white/20 flex items-center justify-center hover:bg-white/50 dark:hover:bg-gray-800/50 transition-all">
            <i className="fas fa-arrow-left text-slate-800 dark:text-white"></i>
          </button>
          <h1 className="text-3xl font-bold text-slate-800 dark:text-white">Marks Management</h1>
        </div>
        <div className="flex items-center gap-4">
          <ThemeToggle />
          <span className="text-slate-700 dark:text-slate-300 font-medium">{user?.full_name}</span>
        </div>
      </header>

      <div className="bg-gradient-to-r from-green-500 to-emerald-600 rounded-2xl p-6 mb-8 text-white shadow-2xl">
        <div className="flex items-center gap-4">
          <div className="w-16 h-16 rounded-full bg-white/20 flex items-center justify-center">
            <i className="fas fa-clipboard-list text-3xl"></i>
          </div>
          <div>
            <h2 className="text-2xl font-bold">
              {mode === 'choose' ? 'Marks Management' : mode === 'add' ? (step === 'select' ? 'Add Marks - Select Details' : 'Add Marks - Enter Marks') : 'View Marks'}
            </h2>
            <p className="text-green-100">
              {mode === 'choose' ? 'Add or view student marks' : mode === 'add' && step === 'entry' ? `${examTypes.find(e => e.value === examType)?.label} - Semester ${semester}` : 'Choose exam type and subject'}
            </p>
          </div>
        </div>
      </div>


      {loading ? (
        <div className="flex items-center justify-center py-20">
          <i className="fas fa-spinner fa-spin text-6xl text-green-500"></i>
        </div>
      ) : mode === 'choose' ? (
        <div className="grid grid-cols-1 md:grid-cols-2 gap-6">
          <motion.div whileHover={{ scale: 1.02 }} onClick={() => { setMode('add'); setStep('select') }}
            className="bg-white/30 dark:bg-gray-800/30 backdrop-blur-xl rounded-2xl p-8 border border-white/20 shadow-lg cursor-pointer hover:bg-green-500/10 transition-all">
            <div className="w-16 h-16 rounded-full bg-green-500/20 flex items-center justify-center mb-4">
              <i className="fas fa-pen text-3xl text-green-500"></i>
            </div>
            <h3 className="text-2xl font-bold text-slate-800 dark:text-white mb-2">Add Marks</h3>
            <p className="text-slate-600 dark:text-slate-400">Enter marks for class tests, internals, and semester exams</p>
          </motion.div>
          
          <motion.div whileHover={{ scale: 1.02 }} onClick={() => setMode('view')}
            className="bg-white/30 dark:bg-gray-800/30 backdrop-blur-xl rounded-2xl p-8 border border-white/20 shadow-lg cursor-pointer hover:bg-purple-500/10 transition-all">
            <div className="w-16 h-16 rounded-full bg-purple-500/20 flex items-center justify-center mb-4">
              <i className="fas fa-chart-bar text-3xl text-purple-500"></i>
            </div>
            <h3 className="text-2xl font-bold text-slate-800 dark:text-white mb-2">View Marks</h3>
            <p className="text-slate-600 dark:text-slate-400">View and analyze student performance</p>
          </motion.div>
        </div>
      ) : mode === 'view' ? (
        <ViewMarksSection 
          subjects={subjects} 
          setAlert={setAlert} 
          setMode={setMode}
        />)
      ) : step === 'select' ? (
        <div className="bg-white/30 dark:bg-gray-800/30 backdrop-blur-xl rounded-2xl p-8 border border-white/20 shadow-lg">
          <div className="grid grid-cols-1 md:grid-cols-2 gap-6">
            <div>
              <label className="block text-sm font-semibold text-slate-700 dark:text-slate-300 mb-2">Exam Type *</label>
              <CustomSelect name="examType" value={examType} onChange={(e) => setExamType(e.target.value)}
                options={examTypes} placeholder="Select Exam Type" />
            </div>
            <div>
              <label className="block text-sm font-semibold text-slate-700 dark:text-slate-300 mb-2">Semester *</label>
              <CustomSelect name="semester" value={semester} onChange={(e) => { setSemester(e.target.value); fetchSubjects(e.target.value) }}
                options={semesterOptions} placeholder="Select Semester" />
            </div>
            <div className="md:col-span-2">
              <label className="block text-sm font-semibold text-slate-700 dark:text-slate-300 mb-2">Subject *</label>
              <CustomSelect name="subject" value={subject} onChange={(e) => setSubject(e.target.value)}
                options={subjects.map(s => ({ value: s.id.toString(), label: `${s.subject_name} (${s.subject_code})` }))}
                placeholder="Select Subject" disabled={!semester} />
            </div>
            <div>
              <label className="block text-sm font-semibold text-slate-700 dark:text-slate-300 mb-2">Maximum Marks</label>
              <input type="number" value={maxMarks} onChange={(e) => setMaxMarks(e.target.value)}
                className="w-full px-4 py-3 rounded-xl bg-white/50 dark:bg-gray-700/50 border border-slate-300 dark:border-slate-600 text-slate-800 dark:text-white" />
            </div>
          </div>
          <button type="button" onClick={handleNext} disabled={!examType || !semester || !subject}
            className="w-full mt-8 py-4 bg-gradient-to-r from-green-500 to-emerald-600 text-white rounded-xl font-bold text-lg hover:from-green-600 hover:to-emerald-700 transition-all disabled:opacity-50">
            Next <i className="fas fa-arrow-right ml-2"></i>
          </button>
        </div>
      ) : (
        <div className="bg-white/30 dark:bg-gray-800/30 backdrop-blur-xl rounded-2xl p-8 border border-white/20 shadow-lg">
          <div className="flex items-center justify-between mb-6">
            <div>
              <h3 className="text-xl font-bold text-slate-800 dark:text-white">
                {subjects.find(s => s.id.toString() === subject)?.subject_name}
              </h3>
              <p className="text-sm text-slate-600 dark:text-slate-400">{students.length} Students • Max: {maxMarks} marks</p>
            </div>
            <div className="px-4 py-2 rounded-lg bg-green-500/20 border border-green-500/30">
              <span className="text-green-700 dark:text-green-300 font-bold">{examTypes.find(e => e.value === examType)?.label}</span>
            </div>
          </div>
          
          <div className="overflow-x-auto">
            <table className="w-full">
              <thead>
                <tr className="border-b-2 border-slate-300 dark:border-slate-600">
                  <th className="text-left py-3 px-4 text-slate-700 dark:text-slate-300 font-semibold">Roll No</th>
                  <th className="text-left py-3 px-4 text-slate-700 dark:text-slate-300 font-semibold">Student Name</th>
                  <th className="text-center py-3 px-4 text-slate-700 dark:text-slate-300 font-semibold">Marks</th>
                  <th className="text-center py-3 px-4 text-slate-700 dark:text-slate-300 font-semibold">Status</th>
                </tr>
              </thead>
              <tbody>
                {students.map((student, index) => {
                  const studentMarks = parseFloat(marks[student.id]) || 0
                  const percentage = maxMarks > 0 ? (studentMarks / maxMarks) * 100 : 0
                  const isPassing = percentage >= 40
                  
                  return (
                    <tr key={student.id} className="border-b border-slate-200 dark:border-slate-700 hover:bg-white/30 dark:hover:bg-gray-700/30 transition-colors">
                      <td className="py-3 px-4">
                        <span className="font-mono text-slate-700 dark:text-slate-300">{student.student_id}</span>
                      </td>
                      <td className="py-3 px-4">
                        <span className="font-medium text-slate-800 dark:text-white">{student.first_name} {student.last_name}</span>
                      </td>
                      <td className="py-3 px-4">
                        <div className="flex items-center justify-center gap-2">
                          <input 
                            type="number" 
                            min="0" 
                            max={maxMarks} 
                            step="0.5" 
                            value={marks[student.id] || ''}
                            onChange={(e) => {
                              const val = parseFloat(e.target.value)
                              if (val < 0 || val > maxMarks) return
                              setMarks({...marks, [student.id]: e.target.value})
                            }}
                            onBlur={(e) => {
                              const val = parseFloat(e.target.value)
                              if (isNaN(val) || val < 0) setMarks({...marks, [student.id]: '0'})
                              else if (val > maxMarks) setMarks({...marks, [student.id]: maxMarks.toString()})
                            }}
                            placeholder="0"
                            className="w-20 px-3 py-2 rounded-lg bg-white dark:bg-gray-600 border-2 border-slate-300 dark:border-slate-500 text-slate-800 dark:text-white text-center font-bold text-lg focus:border-green-500 focus:ring-2 focus:ring-green-500/20 transition-all" 
                          />
                          <span className="text-slate-500 dark:text-slate-400 font-medium">/ {maxMarks}</span>
                        </div>
                      </td>
                      <td className="py-3 px-4 text-center">
                        {marks[student.id] ? (
                          <span className={`inline-flex items-center gap-1 px-3 py-1 rounded-full text-xs font-bold ${
                            isPassing 
                              ? 'bg-green-500/20 text-green-700 dark:text-green-300 border border-green-500/30' 
                              : 'bg-red-500/20 text-red-700 dark:text-red-300 border border-red-500/30'
                          }`}>
                            <i className={`fas ${isPassing ? 'fa-check-circle' : 'fa-times-circle'}`}></i>
                            {percentage.toFixed(0)}%
                          </span>
                        ) : (
                          <span className="text-slate-400 dark:text-slate-500 text-xs">Not entered</span>
                        )}
                      </td>
                    </tr>
                  )
                })}
              </tbody>
            </table>
          </div>

          <div className="mt-6 flex items-center justify-between p-4 rounded-xl bg-slate-100 dark:bg-gray-700/50">
            <div className="flex gap-6">
              <div>
                <p className="text-xs text-slate-600 dark:text-slate-400">Total Students</p>
                <p className="text-2xl font-bold text-slate-800 dark:text-white">{students.length}</p>
              </div>
              <div>
                <p className="text-xs text-slate-600 dark:text-slate-400">Marks Entered</p>
                <p className="text-2xl font-bold text-green-600 dark:text-green-400">
                  {Object.values(marks).filter(m => m !== '' && m !== null).length}
                </p>
              </div>
              <div>
                <p className="text-xs text-slate-600 dark:text-slate-400">Pending</p>
                <p className="text-2xl font-bold text-orange-600 dark:text-orange-400">
                  {students.length - Object.values(marks).filter(m => m !== '' && m !== null).length}
                </p>
              </div>
            </div>
            <button onClick={handleSubmit} disabled={loading}
              className="px-8 py-3 bg-gradient-to-r from-green-500 to-emerald-600 text-white rounded-xl font-bold text-lg hover:from-green-600 hover:to-emerald-700 transition-all disabled:opacity-50 shadow-lg">
              {loading ? <><i className="fas fa-spinner fa-spin mr-2"></i>Saving...</> : <><i className="fas fa-save mr-2"></i>Save All Marks</>}
            </button>
          </div>
        </div>
      )}

      <CustomAlert show={alert.show} message={alert.message} type={alert.type} onClose={() => setAlert({...alert, show: false})} />
    </motion.div>
  )
}


  return (
    <div className="space-y-6">
      <div className="bg-white/30 dark:bg-gray-800/30 backdrop-blur-xl rounded-2xl p-6 border border-white/20 shadow-lg">
        <div className="grid grid-cols-1 md:grid-cols-3 gap-4">
          <div>
            <label className="block text-sm font-semibold text-slate-700 dark:text-slate-300 mb-2">Semester</label>
            <CustomSelect name="filterSemester" value={filterSemester} onChange={(e) => setFilterSemester(e.target.value)}
              options={semesterOptions} placeholder="All Semesters" />
          </div>
          <div>
            <label className="block text-sm font-semibold text-slate-700 dark:text-slate-300 mb-2">Subject</label>
            <CustomSelect name="filterSubject" value={filterSubject} onChange={(e) => setFilterSubject(e.target.value)}
              options={[{ value: '', label: 'All Subjects' }, ...subjects.map(s => ({ value: s.id.toString(), label: `${s.subject_name}` }))]}
              placeholder="All Subjects" />
          </div>
          <div>
            <label className="block text-sm font-semibold text-slate-700 dark:text-slate-300 mb-2">Exam Type</label>
            <CustomSelect name="filterExamType" value={filterExamType} onChange={(e) => setFilterExamType(e.target.value)}
              options={examTypes} placeholder="All Exams" />
          </div>
        </div>
      </div>

      {loading ? (
        <div className="flex items-center justify-center py-20">
          <i className="fas fa-spinner fa-spin text-6xl text-purple-500"></i>
        </div>
      ) : marksData.length === 0 ? (
        <div className="bg-white/30 dark:bg-gray-800/30 backdrop-blur-xl rounded-2xl p-12 border border-white/20 shadow-lg text-center">
          <i className="fas fa-inbox text-6xl text-slate-400 mb-4"></i>
          <h3 className="text-xl font-bold text-slate-800 dark:text-white mb-2">No Marks Found</h3>
          <p className="text-slate-600 dark:text-slate-400 mb-6">You haven't entered any marks yet or no marks match your filters</p>
          <button onClick={() => setMode('choose')} className="px-6 py-3 bg-purple-500 hover:bg-purple-600 text-white rounded-lg font-semibold">
            <i className="fas fa-arrow-left mr-2"></i> Back
          </button>
        </div>
      ) : (
        <div className="bg-white/30 dark:bg-gray-800/30 backdrop-blur-xl rounded-2xl p-8 border border-white/20 shadow-lg">
          <div className="flex items-center justify-between mb-6">
            <h3 className="text-xl font-bold text-slate-800 dark:text-white">
              {marksData.length} Mark Entries
            </h3>
          </div>

          <div className="overflow-x-auto">
            <table className="w-full">
              <thead>
                <tr className="border-b-2 border-slate-300 dark:border-slate-600">
                  <th className="text-left py-3 px-4 text-slate-700 dark:text-slate-300 font-semibold">Roll No</th>
                  <th className="text-left py-3 px-4 text-slate-700 dark:text-slate-300 font-semibold">Student</th>
                  <th className="text-left py-3 px-4 text-slate-700 dark:text-slate-300 font-semibold">Subject</th>
                  <th className="text-center py-3 px-4 text-slate-700 dark:text-slate-300 font-semibold">Sem</th>
                  <th className="text-center py-3 px-4 text-slate-700 dark:text-slate-300 font-semibold">Exam Type</th>
                  <th className="text-center py-3 px-4 text-slate-700 dark:text-slate-300 font-semibold">Marks</th>
                  <th className="text-center py-3 px-4 text-slate-700 dark:text-slate-300 font-semibold">Status</th>
                </tr>
              </thead>
              <tbody>
                {marksData.map((mark) => {
                  const percentage = mark.max_marks > 0 ? (mark.marks_obtained / mark.max_marks) * 100 : 0
                  const isPassing = percentage >= 40
                  
                  return (
                    <tr key={mark.id} className="border-b border-slate-200 dark:border-slate-700 hover:bg-white/30 dark:hover:bg-gray-700/30 transition-colors">
                      <td className="py-3 px-4">
                        <span className="font-mono text-slate-700 dark:text-slate-300">{mark.roll_no}</span>
                      </td>
                      <td className="py-3 px-4">
                        <span className="font-medium text-slate-800 dark:text-white">{mark.first_name} {mark.last_name}</span>
                      </td>
                      <td className="py-3 px-4">
                        <div>
                          <p className="font-medium text-slate-800 dark:text-white">{mark.subject_name}</p>
                          <p className="text-xs text-slate-500 dark:text-slate-400">{mark.subject_code}</p>
                        </div>
                      </td>
                      <td className="py-3 px-4 text-center">
                        <span className="text-slate-700 dark:text-slate-300">{mark.semester}</span>
                      </td>
                      <td className="py-3 px-4 text-center">
                        <span className="text-xs px-2 py-1 rounded-full bg-blue-500/20 text-blue-700 dark:text-blue-300 border border-blue-500/30">
                          {getExamTypeLabel(mark.exam_type)}
                        </span>
                      </td>
                      <td className="py-3 px-4 text-center">
                        <span className="font-bold text-slate-800 dark:text-white">{mark.marks_obtained} / {mark.max_marks}</span>
                      </td>
                      <td className="py-3 px-4 text-center">
                        <span className={`inline-flex items-center gap-1 px-3 py-1 rounded-full text-xs font-bold ${
                          isPassing 
                            ? 'bg-green-500/20 text-green-700 dark:text-green-300 border border-green-500/30' 
                            : 'bg-red-500/20 text-red-700 dark:text-red-300 border border-red-500/30'
                        }`}>
                          <i className={`fas ${isPassing ? 'fa-check-circle' : 'fa-times-circle'}`}></i>
                          {percentage.toFixed(0)}%
                        </span>
                      </td>
                    </tr>
                  )
                })}
              </tbody>
            </table>
          </div>
        </div>
      )}
    </div>
  )
}
